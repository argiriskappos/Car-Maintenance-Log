<%- include('../partials/header') %>

<%# Add New Maintenance Record %>
<h2>Add Maintenance Record</h2>

<form action="/records" method="POST">
  <div class="mb-3">
    <%# Service Type %>
    <label>Service Type</label>
    <input class="form-control" name="record[serviceType]" required>
  </div>

  <%# Service Date %>
  <div class="mb-3">
    <label>Date</label>
    <input type="date" class="form-control" name="record[serviceDate]" required>
  </div>

  <%# Cost of Maintenance %>
  <div class="mb-3">
    <label>Cost</label>
    <input type="number" class="form-control" name="record[cost]" required>
  </div>

  <%# Location of Maintenance %>
  <div class="mb-3">
    <label>Location</label>
    <input class="form-control" name="record[location]">
  </div>

  <%# Notes about Maintenance %>
  <div class="mb-3">
    <label>Notes</label>
    <textarea class="form-control" name="record[notes]"></textarea>
  </div>

  <button class="btn btn-primary">Save</button>
</form>

<%- include('./partials/footer') %>

